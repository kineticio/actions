{
  "include": ["./src"],
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "skipLibCheck": true,

    // Rollup will handle this
    "noEmit": true
  }
}
